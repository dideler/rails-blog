<h1>Posts</h1>

<%= link_to "New Post", new_post_path %>

<table>
  <tr>
    <th>Title</th>
    <th>Text</th>
    <th colspan="3"></th>
  </tr>

  <% @posts.each do |post| %>
    <tr>
      <td><%= link_to post.title, post %></td>
      <td><%= post.text  %></td>
      <td><%= link_to "Edit", edit_post_path(post) %></td>
      <td><%= link_to "Delete", post_path(post), method: :delete,
              data: { confirm: "Are you sure?" } %></td>
    </tr>
  <% end %>
</table>
